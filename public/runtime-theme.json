{
    "theme": "new-theme",
    "variant": "yellow",
    "version": "1.0.1",
    "button": {
        "text": "text-base font-medium font-normal text-white capitalize text-pretty",
        "padding": "p-4",
        "border": "border-4 border-current",
        "borderRadius": "rounded-sm"
    },
    "checkBox": "w-10 h-10 m-2 border-2 appearance-none cursor-pointer",
    "input" : {
        "button": {
            "primary" : "{{button.text}} {{button.padding}} {{button.border}} {{button.borderRadius}} bg-teal-500 hover:bg-teal-600 active:bg-teal-700 focus:ring-teal-300",
            "secondary" : "{{button.text}} {{button.padding}} {{button.border}} {{button.borderRadius}} bg-yellow-500 hover:bg-yellow-600 active:bg-yellow-700 focus:ring-yellow-300",
            "danger" : "{{button.text}} {{button.padding}} {{button.border}} {{button.borderRadius}} bg-amber-500 hover:bg-amber-600 active:bg-amber-700 focus:ring-amber-300"
        },
        "checkBox": {
            "checked" : "{{checkBox}} border-blue-600 rounded-sm bg-blue-600 checked:bg-blue-600",
            "unchecked" : "{{checkBox}} border-gray-400 rounded-sm bg-white",
            "indeterminate" : "{{checkBox}} border-cyan-400 rounded-sm bg-cyan-400"
        }
    }
}
